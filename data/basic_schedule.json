{
    "outputs" : [
        {
            "id" : "light#1",
            "type" : "gpio",
            "description" : {
                "pin" : 26,
                "default" : "off"
            }
        },
        {
            "id" : "filter#1",
            "type" : "gpio",
            "description" : {
                "pin" : 19,
                "default" : "on"
            }
        },
        {
            "id" : "heater#1",
            "type" : "gpio",
            "description" : {
                "pin" : 6,
                "default" : "on"
            }
        },
        {
            "id" : "skim#1",
            "type" : "gpio",
            "description" : {
                "pin" : 5,
                "default" : "off"
            }
        },
        {
            "id" : "light#2",
            "type" : "gpio",
            "description" : {
                "pin" : 27,
                "default" : "off"
            }
        },
        {
            "id" : "filter#2",
            "type" : "gpio",
            "description" : {
                "pin" : 13,
                "default" : "on"
            }
        },
        {
            "id" : "heater#2",
            "type" : "gpio",
            "description" : {
                "pin" : 22,
                "default" : "on"
            }
        },
        {
            "id" : "co2",
            "type" : "gpio",
            "description" : {
                "pin" : 17,
                "default" : "on"
            }
        },
        {
            "id" : "cantest",
            "type" : "can",
            "description" : {
                "can_device" : "can0",
                "object_identifier" : 2,
                "default" : 0,
                "transition" : {
                    "type" : "linear",
                    "velocity" : 5,
                    "period" : "10s"
                }
            }
        },
        {
            "id" : "badheizer",
            "type" : "remote_function",
            "description" : {
                "url": "badheizer.fritz.box/cm",
                "value" : {
                    "name" : "cmnd",
                    "description" : {
                        "type" : "tasmota_power_command"
                    }
                }
            }
        },
        {
            "id" : "mqtt_test",
            "type" : "mqtt",
            "description" : {
                "url" : "NewAquariumController",
                "port" : 1883,
                "topic" : "zigbee2mqtt/first_socket/set",
                "default" : { "value" : { "state" : "off" } },
                "user" : "iot",
                "password" : "yourpw"
            }
        }
    ],
    "inputs" : [
        {
            "id" : "temperature",
            "type" : "dsxxx",
            "connection" : "i2c",
            "connection_description" : {
                "port" : "2x3"
            }
        }
    ],
    "actions": [
        {
            "id" : "lights_on",
            "outputs" : ["light#1", "light#2", "co2", "cantest", "mqtt_test"],
            "output_actions" : ["on", "on", "on", 255, { "value" : { "state" : "on" } }]
        },
        {
            "id" : "lights_off",
            "outputs" : ["light#1", "light#2", "co2", "cantest", "mqtt_test"],
            "output_actions" : ["off", "off", "off", 0, { "value" : { "state" : "off" } }]
        },
        {
            "id" : "maintenance aquarium#1",
            "outputs" : ["light#1", "filter#1", "heater#1"],
            "output_actions" : ["on", "off", "off"]
        },
        {
            "id" : "maintenance aquarium#2",
            "outputs" : ["light#2", "filter#2", "heater#2"],
            "output_actions" : ["on", "off", "off"]
        }
    ],
    "schedule" : {
        "events" : [
            {
                "name" : "day start",
                "day" : 0,
                "trigger_at" : "10:00",
                "actions" : ["lights_on"]
            },
            {
                "name" : "day end",
                "day" : 0,
                "trigger_at" : "22:00",
                "actions" : ["lights_off"]
            }
        ],
        "repeating" : true,
        "period_in_days" : 1,
        "start_at" : "17.10.2018",
        "title" : "aquariums"
    }
}
